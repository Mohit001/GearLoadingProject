<resources>
    <declare-styleable name="GearView">
        <attr name="mainColor" format="color"/>
        <attr name="innerColor" format="color"/>
        <attr name="rotateAngle" format="float"/>
        <attr name="mainDiameter" format="dimension"/>
        <attr name="secondDiameter" format="dimension"/>
        <attr name="innerDiameter" format="dimension"/>
        <attr name="teethWidth" format="dimension"/>
        <attr name="enableCutCenter" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CutOutLayout">
        <attr name="cutLayoutColor" format="color"/>
        <attr name="cutRadius" format="dimension"/>
        <attr name="shadowWidth" format="dimension"/>
        <attr name="shadowColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="GearLoadingLayout">
        <attr name="firstGearColor" format="color"/>
        <attr name="secondGearColor" format="color"/>
        <attr name="thirdGearColor" format="color"/>
        <attr name="firstInnerGearColor" format="color"/>
        <attr name="secondInnerGearColor" format="color"/>
        <attr name="thirdInnerGearColor" format="color"/>
        <attr name="gearLayoutCutColor" format="color"/>
        <attr name="layoutBackground" format="color"/>
        <attr name="gearLayoutCutRadius" format="dimension"/>
        <attr name="gearLayoutCutAlpha" format="float"/>
        <attr name="layoutAlpha" format="float"/>
        <attr name="cutLayoutVisibility" format="boolean"/>
        <attr name="firstGearCuttedCenter" format="boolean"/>
        <attr name="secondGearCuttedCenter" format="boolean"/>
        <attr name="thirdGearCuttedCenter" format="boolean"/>
        <attr name="gearLayoutShadowWidth" format="dimension"/>
        <attr name="gearLayoutShadowColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="PullToRefreshLayout">
        <attr name="ptr_fullBackDuration" format="integer"/>
        <attr name="ptr_cancelBackDuration" format="integer"/>
        <attr name="ptr_tensionBackDuration" format="integer"/>
        <attr name="ptr_autoRefreshDuration" format="integer"/>
        <attr name="ptr_threshold" format="dimension"/>
        <attr name="ptr_tension" format="dimension"/>
        <attr name="ptr_drag_coefficient" format="float"/>
        <attr name="ptr_tension_coefficient" format="float"/>
        <attr name="ptr_parallax_coefficient" format="float"/>
        <attr name="ptr_drag_mode" format="enum">
            <enum name="overlay" value="0"/>
            <enum name="drag" value="1"/>
            <enum name="parallax" value="2"/>
        </attr>
        <attr name="ptr_tension_mode" format="enum">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
        </attr>
    </declare-styleable>
</resources>
